{
    "name": "valksor/php-dev-cs-fixer-custom-fixers",
    "description": "Custom PHP-CS-Fixer rules for automated code style enforcement including Doctrine migration files and project-specific standards",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "php",
        "php-cs-fixer",
        "code-style",
        "coding-standards",
        "static-analysis",
        "automation",
        "tools",
        "valksor",
        "fixers"
    ],
    "homepage": "https://github.com/valksor/php-dev",
    "require": {
        "php": ">=8.4",
        "friendsofphp/php-cs-fixer": "*",
        "symfony/finder": "*",
        "valksor/php-functions-preg": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "conflict": {
        "friendsofphp/php-cs-fixer": "<3.81.0"
    },
    "suggest": {
        "doctrine/migrations": "To fix doctrine migration files"
    },
    "minimum-stability": "dev",
    "prefer-stable": false,
    "autoload": {
        "psr-4": {
            "ValksorDev\\PhpCsFixerCustomFixers\\": ""
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
